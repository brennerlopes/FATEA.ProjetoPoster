
@model IEnumerable<FATEA.ProjetoPoster.Web.ViewModels.Evento.EventoIndexViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Eventos</h2>

<p>
    @Html.ActionLink("Criar novo evento", "Create", null, new { @class = "btn btn-default" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tema)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NumMaximoAutores)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumAvaliadores)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataFim)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Informacoes)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.NumMaximoAutores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumAvaliadores)
            </td>
            <td>
                @if (item.Status)
                {
                    <span class="glyphicon glyphicon-ok-circle" style="color: green;"></span>
                }
                else
                {
                    <span class="glyphicon glyphicon-ban-circle" style="color: red;"></span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataFim)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Informacoes)
            </td>*@
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
